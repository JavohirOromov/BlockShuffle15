<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#8D3226"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMenu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/continueBtn"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintVertical_bias="0.4"
        android:text="1"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingStart="4dp"
        android:paddingBottom="8dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMenu1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/continueBtn"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintVertical_bias="0.4"
        android:text="5"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingStart="4dp"
        android:paddingBottom="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puzzle"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        app:layout_constraintTop_toBottomOf="@id/buttonMenu"
        app:layout_constraintLeft_toLeftOf="@id/buttonMenu"
        app:layout_constraintRight_toRightOf="@id/buttonMenu1"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continueBtn"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@drawable/button_s"
        android:text="Continue"
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.32"
        android:textSize="16sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/newGameBtn"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@drawable/button_s"
        android:text="New Game"
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@id/continueBtn"
        app:layout_constraintLeft_toLeftOf="@id/continueBtn"
        app:layout_constraintRight_toRightOf="@id/continueBtn"
        android:layout_marginVertical="12dp"
        android:textSize="16sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/InfoBtn"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@drawable/button_s"
        android:text="Info"
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@id/newGameBtn"
        app:layout_constraintLeft_toLeftOf="@id/newGameBtn"
        app:layout_constraintRight_toRightOf="@id/newGameBtn"
        android:layout_marginVertical="12dp"
        android:textSize="16sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/recordBtn"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@drawable/button_s"
        android:text="Record"
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@id/InfoBtn"
        app:layout_constraintLeft_toLeftOf="@id/InfoBtn"
        app:layout_constraintRight_toRightOf="@id/InfoBtn"
        android:layout_marginVertical="12dp"
        android:textSize="16sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quitBtn"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@drawable/button_s"
        android:text="Quit"
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@id/recordBtn"
        app:layout_constraintLeft_toLeftOf="@id/recordBtn"
        app:layout_constraintRight_toRightOf="@id/recordBtn"
        android:layout_marginVertical="12dp"
        android:textSize="16sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>