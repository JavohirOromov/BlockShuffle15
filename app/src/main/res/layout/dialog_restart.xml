<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_1">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_2"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Restart"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you really want to restart the game?"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/res"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        android:paddingHorizontal="24dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/yes"
        android:background="@drawable/bg_4"
        android:text="No"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/font1"
        android:layout_marginVertical="40dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/yes"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/no"
        app:layout_constraintBottom_toBottomOf="@id/no"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/no"
        android:background="@drawable/bg_5"
        android:text="Yes"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="@font/font1"

        />
</androidx.constraintlayout.widget.ConstraintLayout>

