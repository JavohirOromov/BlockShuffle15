<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#8D3226"
    >
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/score"
        app:layout_constraintRight_toRightOf="@id/score"
        app:layout_constraintBottom_toTopOf="@id/score"
        android:fontFamily="@font/font1"
        android:textColor="@color/white"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/score"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/score_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0"
        android:text="12"
        android:textSize="24sp"
        android:paddingBottom="4dp"
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        android:layout_marginStart="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/time"
        app:layout_constraintRight_toRightOf="@id/time"
        app:layout_constraintBottom_toTopOf="@id/time"
        android:fontFamily="@font/font1"
        android:textColor="@color/white"
        />

    <Chronometer
        android:id="@+id/time"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/score_button"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/container"
        app:layout_constraintRight_toRightOf="@id/container"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/time"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/swallow"
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="4"
            android:background="@drawable/time0" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/time"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@id/container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score"
        android:background="@drawable/menu_button"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.2"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settings"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@id/menu"
        app:layout_constraintTop_toTopOf="@id/menu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/menu"
        android:background="@drawable/settengd_button"
        />
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:background="@drawable/orqa_img"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />

            <androidx.appcompat.widget.AppCompatButton style="@style/button" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/restart"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/restart_btn"
        app:layout_constraintTop_toBottomOf="@id/menu"
        app:layout_constraintLeft_toRightOf="@id/container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>